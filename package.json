{
  "name": "video-editor-monorepo",
  "version": "0.0.1-beta.20",
  "private": true,
  "engines": {
    "node": ">=16.14"
  },
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build": "pnpm -r build",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "check": "tsc --incremental --noEmit",
    "check:reactivity": "node scripts/check-reactivity.mjs",
    "publish": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm run build && pnpm publish -r --access public --no-git-checks",
    "test": "pnpm -r run test",
    "test:protocol": "pnpm -C packages/protocol run test:ui",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks",
    "sizecheck": "npx vite-bundle-visualizer",
    "update:dependencies": "taze -r -w"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@iconify-json/ri": "catalog:",
    "@types/node": "catalog:",
    "@unocss/reset": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/browser-playwright": "^4.0.16",
    "@vueuse/core": "catalog:",
    "@wendraw/starry": "0.0.4-beta.1",
    "bumpp": "catalog:",
    "chalk": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "playwright": "catalog:",
    "simple-git-hooks": "catalog:",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "unplugin-auto-import": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/verifyCommit.mjs",
    "pre-push": "pnpm run test"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
